// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Document {
  id        String   @id @default(cuid())
  userId    String
  title     String
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  File      File[]
}

model File {
  id         String    @id @default(cuid())
  userId     String
  fileKey    String
  fileName   String
  fileType   String
  fileSize   Int? // Size in bytes, if is null the file has not been reported as uploaded and can be deleted
  documentId String?
  document   Document? @relation(fields: [documentId], references: [id])
  deletedAt  DateTime? // This is only set if the document is null, defines when the file was deleted to provide a grace period
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  @@unique([fileKey])
  @@index([userId])
  @@index([documentId])
}
